rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // This rule allows anyone with your Firestore database reference to view, edit,
    // and delete all data in your Firestore database. It is useful for getting
    // started, but it is configured to expire after 30 days because it
    // leaves your app open to attackers. At that time, all client
    // requests to your Firestore database will be denied.
    //
    // Make sure to write security rules for your app before that time, or else
    // all client requests to your Firestore database will be denied until you Update
    // your rules
    
    // Allow read/write access to all collections for now (development mode)
    // TODO: Implement proper security rules before production
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 6, 19);
    }
    
    // Quote Requests - Users can create their own requests, admins can read/write all
    match /quoteRequests/{document} {
      allow create: if request.auth != null; // Authenticated users can create
      allow read, write: if request.auth != null; // For now, allow all authenticated users
    }
    
    // Quotations - Users can create their own, admins can read/write all
    match /quotations/{document} {
      allow create: if request.auth != null; // Authenticated users can create
      allow read, write: if request.auth != null; // For now, allow all authenticated users
    }
  }
}